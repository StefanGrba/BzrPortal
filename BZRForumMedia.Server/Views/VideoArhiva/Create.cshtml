@model BZRForumMedia.Server.ViewModels.VideoViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <h1>Video</h1>

    @if (@ViewBag.Msg != null)
    {
        <h4 style="color: green">@ViewBag.Msg</h4>
    }

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Naslov" class="control-label"></label>
                    <input asp-for="Naslov" class="form-control" />
                    <span asp-validation-for="Naslov" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="VideoPath" class="control-label"></label>
                    <input asp-for="VideoPath" class="form-control" />
                    <span asp-validation-for="VideoPath" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Kreiraj" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Nazad na listu</a>
    </div>
</div>
