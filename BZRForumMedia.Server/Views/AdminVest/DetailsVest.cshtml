    ViewData["Title"] = "Detalji vesti";
}

<h1>Detalji vesti</h1>

<div class="container">
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Naslov)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Naslov)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Podnaslov)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Podnaslov)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tekst)
        </dt>
        <dd class = "col-sm-10">
          @Html.Raw(Model.Tekst)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Sazetak)
        </dt>
        <dd class = "col-sm-10">
           @Html.Raw(Model.Sazetak)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DatumObjavljivanja)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DatumObjavljivanja)
