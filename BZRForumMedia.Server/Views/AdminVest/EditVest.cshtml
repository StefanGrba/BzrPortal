@model BZRForumMedia.Server.ViewModels.VestViewModel

@{
    ViewData["Title"] = "Izmeni vest";
    int idVest = ViewBag.Id;
}
<div class="container">
    <h1>Izmeni vest</h1>


    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="EditVest" asp-route-id="@idVest">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Naslov" class="control-label"></label>
                    <input asp-for="Naslov" class="form-control" />
                    <span asp-validation-for="Naslov" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Podnaslov" class="control-label"></label>
                    <input asp-for="Podnaslov" class="form-control" />
                    <span asp-validation-for="Podnaslov" class="text-danger"></span>
                </div>
                <div class="form-group" style="width:100%">
                    <label asp-for="Tekst" class="control-label"></label>
                    <textarea asp-for="Tekst" style="width:100%">
              @Model.Tekst
                </textarea>
                    <script>
                        tinymce.init({
                            selector: 'textarea',
                            plugins: 'advlist autolink lists link image charmap print preview hr anchor pagebreak',
                            toolbar_mode: 'floating',
                        });
                    </script>
                </div>
                <div class="form-group" style="width:100%">
                    <label asp-for="Sazetak" class="control-label"></label>
                    <textarea asp-for="Sazetak" style="width:100%">
              @Model.Sazetak
                </textarea>
                    <script>
                        tinymce.init({
                            selector: 'textarea',
                            plugins: 'advlist autolink lists link image charmap print preview hr anchor pagebreak',
                            toolbar_mode: 'floating',
                        });
                    </script>
                </div>
                <div class="form-group">
                    <label asp-for="DatumObjavljivanja" class="control-label"></label>
                    <input asp-for="DatumObjavljivanja" class="form-control" />
                    <span asp-validation-for="DatumObjavljivanja" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Sačuvaj" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Nazad na listu</a>
    </div>

</div>