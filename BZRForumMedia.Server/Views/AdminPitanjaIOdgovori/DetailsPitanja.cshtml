    int idPitanja = ViewBag.Id;
}
<div class="container">
    <h1>Detalji o pitanju</h1>

    <div>
        <h4>sve informacije</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Naslov)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Naslov)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Pitanje)
            </dt>
            <dd class="col-sm-10">
