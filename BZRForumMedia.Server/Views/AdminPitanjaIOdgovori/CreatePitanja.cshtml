@model BZRForumMedia.Server.ViewModels.PitanjaIOdgovoriViewModel

@{
    ViewData["Title"] = "Kreiraj pitanje";
}
<div class="container">
    <h1>Kreiraj pitanja</h1>

    <h4>Popunite sva polja</h4>
    @if (@ViewBag.Msg != null)
    {
        <h4 class="text-success">@ViewBag.Msg</h4>
    }
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="CreatePitanja">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Naslov" class="control-label"></label>
                    <input asp-for="Naslov" class="form-control" />
                    <span asp-validation-for="Naslov" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Pitanje" class="control-label"></label>
                    <input asp-for="Pitanje" class="form-control" />
                    <span asp-validation-for="Pitanje" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Odgovor" class="control-label"></label>
                    <input asp-for="Odgovor" class="form-control" />
                    <span asp-validation-for="Odgovor" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Kreiraj" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="ListaPitanja">Nazad na listu</a>
    </div>

</div>