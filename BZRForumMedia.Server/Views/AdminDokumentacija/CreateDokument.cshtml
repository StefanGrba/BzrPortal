@model BZRForumMedia.Server.ViewModels.DokumentViewModel

@{
    ViewData["Title"] = "Kreiraj dokument";
    List<TipDokumentacije> tipovi = ViewBag.Tipovi;
}
<div class="container">
    <h1>Kreiraj dokument</h1>
    @if (@ViewBag.Msg != null)
    {
        <h4 class="text-success">@ViewBag.Msg</h4>
    }

    <hr />
    <div class="row">
        <div class="col-md-12">
            <form asp-action="CreateDokument" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Naslov" class="control-label"></label>
                    <input asp-for="Naslov" class="form-control" />
                    <span asp-validation-for="Naslov" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Autor" class="control-label"></label>
                    <input asp-for="Autor" class="form-control" />
                    <span asp-validation-for="Autor" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DatumObjavljivanja" class="control-label"></label>
                    <input asp-for="DatumObjavljivanja" class="form-control" />
                    <span asp-validation-for="DatumObjavljivanja" class="text-danger"></span>
                </div>
                <div class="form-group" style="width:100%">
                    <label asp-for="Tekst" class="control-label"></label>
                    <textarea asp-for="Tekst" style="width:100%">
              @Model.Tekst
                </textarea>
                    <script>
                        tinymce.init({
                            selector: 'textarea',
                            plugins: 'autoresize preview a11ychecker advcode casechange formatpainter linkchecker autolink lists checklist media mediaembed pageembed permanentpen powerpaste table advtable tinycomments tinymcespellchecker',
                            autoresize_on_init: false,
                            toolbar: 'a11ycheck preview addcomment showcomments casechange checklist code formatpainter pageembed permanentpen table',
                            toolbar_mode: 'floating',
                            tinycomments_mode: 'embedded',
                            tinycomments_author: 'Author name'
                        });

                    </script>
                </div>
                <div class="form-group">
                    <label asp-for="Napomena" class="control-label"></label>
                    <input asp-for="Napomena" class="form-control" />
                    <span asp-validation-for="Napomena" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IdTipa" class="control-label"></label>
                    <select asp-for="IdTipa" class="form-control">
                        @foreach (var tip in tipovi)
                        {
                            <option value="@tip.Id">@tip.ImeTipa</option>
                        }
                    </select>
                    <span asp-validation-for="IdTipa" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PdfPutanja" class="control-label"></label>
                    <input asp-for="PdfPutanja" class="form-control" />
                    <span asp-validation-for="PdfPutanja" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="WordPutanja" class="control-label"></label>
                    <input asp-for="WordPutanja" class="form-control" />
                    <span asp-validation-for="WordPutanja" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Kreiraj" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Nazad na listu</a>
    </div>

</div>