@model BZRForumMedia.Server.ViewModels.PropisViewModel

@{
    ViewData["Title"] = "DodajTekst";
}
<div class="container">
    <h1>Dodaj teksta</h1>

    <h4>Kliknite na tekst kako bite ga izmenili</h4>
    @if (@ViewBag.Msg != null)
    {
        <h4 class="text-success">@ViewBag.Msg</h4>
    }
    <hr />
    <div class="row">
        <div class="col-md-12">
            <form asp-action="DodajTekst" style="width:100%">
                <div class="form-group" style="width:100%" id="editor">
                    <textarea asp-for="TekstPropisa">
   
  </textarea>
                    <script>
                        tinymce.init({
                            selector: 'textarea',
                            plugins: 'autoresize preview a11ychecker advcode casechange formatpainter linkchecker autolink lists checklist media mediaembed pageembed permanentpen powerpaste table advtable tinycomments tinymcespellchecker',
                            autoresize_on_init: false,
                            toolbar: 'a11ycheck preview addcomment showcomments casechange checklist code formatpainter pageembed permanentpen table',
                            toolbar_mode: 'floating',
                            tinycomments_mode: 'embedded',
                            tinycomments_author: 'Author name'
                        });

                    </script>
                </div>
                <div class="form-group">
                    <input type="submit" value="Sačuvaj" class="btn btn-primary" />
                </div>
            </form>

        </div>
    </div>

    <div>
        <a asp-action="ListaPropisa">Nazad na listu</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
