                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="section padding_layout_1">
    <div class="container">
       
        <div class="row">
            @if (Model.Count != 0)
            {
                @foreach (var vest in Model)
                {
                    brojacVesti += 1;
                    <div class="col-md-4">
                        <div class="full blog_colum" style="padding-bottom: 40px;">
                            <div class="blog_feature_img">
                                <a asp-controller="KorisnikVesti" asp-action="JednaVest" asp-route-id="@vest.Id">
                                    <img src="@vest.PutanjaDoSlike" alt="@vest.Naslov" />
                                </a>
                            </div>
                            <div class="post_time">
                                <p><i class="fa fa-clock-o"></i>@vest.DatumObjavljivanja</p>
                            </div>
                            <div class="blog_feature_head">
                                <h4>@vest.Naslov</h4>
                            </div>
                            <div class="blog_feature_cont">
                                <a asp-controller="KorisnikVesti" asp-action="JednaVest" asp-route-id="@vest.Id"> @Html.Raw(@vest.Sazetak) </a>
                            </div>


                        </div>
                    </div>
                    if (brojacVesti == 6)
                    {
                        break;
                    }
                }


            }


        </div>
    </div>
</div>
<!-- end section -->
<!-- section -->
@if (User.IsInRole("Super korisnik"))
