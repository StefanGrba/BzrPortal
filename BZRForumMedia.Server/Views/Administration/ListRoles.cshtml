@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityRole>

@{
    ViewBag.Title = "Lista rola";
}
<div class="container">
    <h1>Sve role</h1>
    @*<a asp-controller="Administration" asp-action="ListaKorisnika" class="btn btn-group-lg btn-info">Lista korisnika</a>*@
    @if (Model.Any())
    {
        foreach (var role in Model)
        {
            <div class="card">
                <div class="card-header">
                    ID Role : @role.Id
                </div>
                <div class="card-body">
                    <h5> @role.Name</h5>
                </div>
                <div class="card-footer">
                    <a class="btn btn-outline-primary" asp-controller="Administration" asp-action="EditUsersInRole" asp-route-roleId="@role.Id" style="width: auto">Dodaj ili ukloni korisnika</a>
                </div>
            </div>
        }
    }
    else
    {
        <div class="card">
            <div class="card-header">
                Role još uvek nisu kreirane
            </div>
            <div class="card-body">
                <h5>    Upotrebite dugme ispod da biste kreirali rolu</h5>
            </div>
            <a class="btn btn-outline-primary" asp-controller="Administration" asp-action="CreateRole">Kreiraj rolu</a>
        </div>
    }
</div>