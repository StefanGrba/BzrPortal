@using BZRForumMedia.Server.ViewModels;
@model List<UserRoleViewModel>

@{ 
    string roleId = ViewBag.RoleId;
}
<div class="container">
    <form method="post">
        <div class="card">
            <div class="card-header">
                <h2>Dodaj ili ukloni korisnika iz role</h2>
            </div>
            <div class="card-body">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <input type="hidden" asp-for="@Model[i].UserId" />
                    <input type="hidden" asp-for="@Model[i].UserName" />
                    <div class="form-check m-1">
                        <input asp-for="@Model[i].IsSelected" class="from-check-input" />
                        <label class="form-check-label" asp-for="@Model[i].IsSelected">
                            @Model[i].UserName
                        </label>
                    </div>
                }
            </div>
            <div class="card-footer">
                <input type="submit" value="Sačuvaj izmene" class="btn btn-outline-primary" style="width:auto" />
                <a asp-action="ListRoles" asp-controller="Administration" class="btn btn-danger">Vrati se</a>
            </div>
        </div>
    </form>

</div>