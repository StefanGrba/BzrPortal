@model BZRForumMedia.Server.ViewModels.RubrikaViewModel

@{
    ViewData["Title"] = "Kreiraj rubriku";
}
<div class="container">
    <h1>Kreiraj rubriku</h1>

    <h4>
        Popunite polja
    </h4>

    @if (@ViewBag.Msg != null)
    {
        <h4 class="text-success">@ViewBag.Msg</h4>
    }
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="CreateRubrika">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Naziv" class="control-label"></label>
                    <input asp-for="Naziv" class="form-control" />
                    <span asp-validation-for="Naziv" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Kreiraj" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="SpisakRubrika">Nazad na listu</a>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
